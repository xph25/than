local main = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local up = Instance.new("TextButton")
local down = Instance.new("TextButton")
local onof = Instance.new("TextButton")
local TextLabel = Instance.new("TextLabel")
local plus = Instance.new("TextButton")
local speed = Instance.new("TextLabel")
local mine = Instance.new("TextButton")
local closebutton = Instance.new("TextButton")
local mini = Instance.new("TextButton")
local mini2 = Instance.new("TextButton")

main.Name = "main"
main.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
main.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
main.ResetOnSpawn = false

-- 動態顏色函數
local function getRainbowColor(timeOffset)
    local time = tick() + (timeOffset or 0)
    local r = (math.sin(time) + 1) / 2
    local g = (math.sin(time + 2) + 1) / 2
    local b = (math.sin(time + 4) + 1) / 2
    return Color3.new(r, g, b)
end

local function getPulseColor(baseColor, pulseSpeed)
    local pulse = (math.sin(tick() * pulseSpeed) + 1) / 2
    return baseColor:Lerp(Color3.new(1, 1, 1), pulse * 0.3)
end

-- 設置動態顏色
local rainbowColors = {
    getRainbowColor(0),    -- 主背景色
    getRainbowColor(1),    -- 邊框色
    getRainbowColor(2),    -- UP按鈕
    getRainbowColor(3),    -- DOWN按鈕
    getRainbowColor(4),    -- 開關按鈕
    getRainbowColor(5),    -- 標題
    getRainbowColor(6),    -- 加號按鈕
    getRainbowColor(7),    -- 速度顯示
    getRainbowColor(8),    -- 減號按鈕
    getRainbowColor(9),    -- 關閉按鈕
    getRainbowColor(10)    -- 最小化按鈕
}

-- 創建動態更新函數
local colorUpdateConnection
local function startDynamicColors()
    if colorUpdateConnection then
        colorUpdateConnection:Disconnect()
    end
    
    colorUpdateConnection = game:GetService("RunService").RenderStepped:Connect(function()
        -- 更新所有顏色
        rainbowColors = {
            getRainbowColor(0),
            getRainbowColor(1),
            getRainbowColor(2),
            getRainbowColor(3),
            getRainbowColor(4),
            getRainbowColor(5),
            getRainbowColor(6),
            getRainbowColor(7),
            getRainbowColor(8),
            getRainbowColor(9),
            getRainbowColor(10)
        }
        
        -- 應用顏色到UI元素
        Frame.BackgroundColor3 = rainbowColors[1]
        Frame.BorderColor3 = rainbowColors[2]
        up.BackgroundColor3 = getPulseColor(rainbowColors[3], 3)
        down.BackgroundColor3 = getPulseColor(rainbowColors[4], 3)
        onof.BackgroundColor3 = getPulseColor(rainbowColors[5], 3)
        TextLabel.BackgroundColor3 = getPulseColor(rainbowColors[6], 2)
        plus.BackgroundColor3 = getPulseColor(rainbowColors[7], 3)
        speed.BackgroundColor3 = getPulseColor(rainbowColors[8], 3)
        mine.BackgroundColor3 = getPulseColor(rainbowColors[9], 3)
        closebutton.BackgroundColor3 = getPulseColor(rainbowColors[10], 3)
        mini.BackgroundColor3 = getPulseColor(rainbowColors[10], 3)
        mini2.BackgroundColor3 = getPulseColor(rainbowColors[10], 3)
        
        -- 文字顏色對比度調整
        local function getContrastColor(bgColor)
            local luminance = (0.299 * bgColor.R + 0.587 * bgColor.G + 0.114 * bgColor.B)
            return luminance > 0.5 and Color3.new(0, 0, 0) or Color3.new(1, 1, 1)
        end
        
        up.TextColor3 = getContrastColor(up.BackgroundColor3)
        down.TextColor3 = getContrastColor(down.BackgroundColor3)
        onof.TextColor3 = getContrastColor(onof.BackgroundColor3)
        TextLabel.TextColor3 = getContrastColor(TextLabel.BackgroundColor3)
        plus.TextColor3 = getContrastColor(plus.BackgroundColor3)
        speed.TextColor3 = getContrastColor(speed.BackgroundColor3)
        mine.TextColor3 = getContrastColor(mine.BackgroundColor3)
        closebutton.TextColor3 = getContrastColor(closebutton.BackgroundColor3)
        mini.TextColor3 = getContrastColor(mini.BackgroundColor3)
        mini2.TextColor3 = getContrastColor(mini2.BackgroundColor3)
    end)
end

